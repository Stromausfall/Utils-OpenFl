{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "lime",
			"command": "test",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "run unit tests (debug: neko)",
			"command": "haxelib",
			"args": ["run", "lime", "test", "neko", "-debug", "-Dfdb"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"]
		}
	]
}
